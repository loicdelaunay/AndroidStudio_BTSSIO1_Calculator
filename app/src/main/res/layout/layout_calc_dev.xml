<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TITRE -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:id="@+id/textTitleDev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculatrice DÃ©veloppeur"
            android:gravity="center"
            android:textSize="25sp"/>
    </FrameLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />


    <!-- ECRAN D'AFFICHAGE 1 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <EditText
            android:id="@+id/editTextNb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>


    <!-- LIGNE AVEC LES BASES DISPONIBLES POUR LA CONVERSION 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/buttonBin1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="2"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/buttonOctal1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="8"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/buttonHexa1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="16"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/buttonDec1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="10"
            android:textSize="20sp"/>
    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />


    <!-- ECRAN D'AFFICHAGE 2 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <EditText
            android:id="@+id/editTextNb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>


    <!-- LIGNE AVEC LES BASES DISPONIBLES POUR LA CONVERSION 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/buttonBin2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="2"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/buttonOctal2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="8"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/buttonHexa2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="16"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/buttonDec2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="10"
            android:textSize="20sp"/>
    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />


    <!-- BOUTON EGAL -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonEgal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="="
            android:textSize="20sp"
            android:textColor="#3358ff"/>
    </FrameLayout>

</LinearLayout>