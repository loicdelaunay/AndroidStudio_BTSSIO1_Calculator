<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <TextView
            android:id="@+id/textTitleDev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculatrice Développeur"
            android:gravity="center"
            android:textSize="25sp"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <EditText
            android:id="@+id/editTextNb1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <EditText
            android:id="@+id/editTextNb2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center">
        <Button
            android:id="@+id/buttonBin"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="2"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/buttonOctal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="8"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/buttonHexa"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="16"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/buttonDec"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="10"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/buttonEgal"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="="
            android:textSize="20sp"
            android:textColor="#3358ff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textResult"
            android:layout_width="105dp"
            android:layout_height="67dp"
            android:text="Résultat :"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/textAffichResult"
            android:layout_width="match_parent"
            android:layout_height="67dp" />
    </LinearLayout>

</LinearLayout>